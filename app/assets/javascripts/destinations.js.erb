$(document).ready(function () {


  function initMap() {
      alert("the map init method is being fired");

      var latLong = {lat: latitude, lng: longitude};

      var image = "<%= asset_path ('cat_icon.png')%>";

      var mapOptions = {
        zoom: 10,
        center: latLong,
        scrollwheel: false
      };

      var map = new google.maps.Map(document.getElementById('destination-map'), mapOptions);

      var marker = new google.maps.Marker({
        position: latLong,
        map: map,
        title: 'Stronbox West',
        icon: image,
        animation: google.maps.Animation.DROP
      });

      var contentString = '<h2>'+ address +'</h2>';

      var infowindow = new google.maps.InfoWindow({
         content: contentString
      });

      google.maps.event.addListener(marker, 'click', function() {
         infowindow.open(map,marker);
      });
  }

});
